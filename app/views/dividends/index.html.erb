<h1>Dividends History</h1>

<!-- <%= debug @dividends %> -->

<% if @dividends.blank? %>
  <em>No Info Available</em>
<% else %>
  <table class="table table-striped table-sm table-bordered table-hover">
    <thead>
      <tr>
        <th>Symbol</th>
        <th>Date</th>
        <th>Payment</th>
      </tr>
    </thead>
    <tbody>
      <% @dividends.each do |dividend| %>
      <tr>
        <td><%= dividend.symbol %></td>
        <td><%= dividend.date %></td>
        <td><%= number_to_currency(dividend.payment) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
